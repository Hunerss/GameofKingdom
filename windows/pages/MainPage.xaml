<UserControl x:Class="GameofKingdom.windows.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameofKingdom.windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32" Grid.Column="1" Grid.Row="0" FontWeight="Bold">Witaj w Grze Królestw</TextBlock>
        <Grid Grid.Column="1" Grid.Row="1" Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button Style="{StaticResource BaseButtonStyle}" Foreground="White" Name="btn_1" Grid.Row="0" Width="200" Height="75" FontSize="32" Content="Graj" Click="Navigation"/>
                <Button Style="{StaticResource BaseButtonStyle}" Name="btn_2" Grid.Row="1" Width="200" Height="75" FontSize="32" Content="Wyniki" Click="Navigation"/>
                <Button Style="{StaticResource BaseButtonStyle}" Name="btn_3" Grid.Row="2" Width="200" Height="75" FontSize="32" Content="Instrukcja" Click="Navigation"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button Style="{StaticResource BaseButtonStyle}" Name="btn_4" Grid.Row="0" Width="200" Height="75" FontSize="32" Content="Opcje" Click="Navigation"/>
                <Button Style="{StaticResource BaseButtonStyle}" Name="btn_5" Grid.Row="1" Width="200" Height="75" FontSize="32" Content="Licencja" Click="Navigation"/>
                <Button Style="{StaticResource BaseButtonStyle}" Name="btn_6" Grid.Row="2" Width="200" Height="75" FontSize="32" Content="Wyjdź" Click="Navigation"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
